    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "python": "python",
            "justMyCode": false
        }
    ]
}